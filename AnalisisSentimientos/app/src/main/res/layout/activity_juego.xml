<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="15sp"
    tools:context=".Controlador.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <!-- Content here -->


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:id="@+id/imgJuego"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtJug_Opinion"
                    android:layout_width="match_parent"
                    android:layout_height="165sp"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="What do you think when you see the image?"
                    android:inputType="text|textMultiLine"
                    android:maxLength="150"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnJug_Siguiente"
                android:layout_width="300sp"
                android:layout_height="30sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/boton_redondear"
                android:onClick="cambiar"
                android:text="Next"
                android:textColor="#ffffff"
                android:textSize="20sp"

                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>